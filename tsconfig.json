{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "es5"
    },
    "compileOnSave": true,
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
